rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    // Controleer of twee gebruikers vrienden zijn
    function areFriends(uid1, uid2) {
      return (
        exists(/databases/$(database)/documents/friendRequests/$(uid1 + '_' + uid2)) &&
        get(/databases/$(database)/documents/friendRequests/$(uid1 + '_' + uid2)).data.status == 'accepted'
      ) || (
        exists(/databases/$(database)/documents/friendRequests/$(uid2 + '_' + uid1)) &&
        get(/databases/$(database)/documents/friendRequests/$(uid2 + '_' + uid1)).data.status == 'accepted'
      );
    }

    function isFriendOrSelf(ownerUid) {
      return isOwner(ownerUid) || areFriends(request.auth.uid, ownerUid);
    }

    // Gebruikers
    match /users/{uid} {
      allow read: if isLoggedIn();
      allow write: if isOwner(uid);
    }

    // Events — alleen voor maker of vrienden van maker
    match /events/{evId} {
      allow read: if isLoggedIn() && isFriendOrSelf(resource.data.createdBy);
      allow create: if isLoggedIn();
      allow update: if isLoggedIn() && isFriendOrSelf(resource.data.createdBy);
      allow delete: if isLoggedIn() && isOwner(resource.data.createdBy);

      match /chat/{msgId} {
        allow read, create: if isLoggedIn();
      }
    }

    // Vriendschapsverzoeken
    match /friendRequests/{reqId} {
      allow read: if isLoggedIn();
      allow create: if isLoggedIn();
      allow update: if isLoggedIn();
    }

    // Chat rooms
    match /rooms/{roomId} {
      allow read, write: if isLoggedIn() &&
        request.auth.uid in resource.data.members;
      allow create: if isLoggedIn();

      match /messages/{msgId} {
        allow read, create: if isLoggedIn();
        allow update: if isLoggedIn();
      }
    }

    // Foto's & video's — alleen voor uploader of vrienden
    match /photos/{photoId} {
      allow read: if isLoggedIn() && isFriendOrSelf(resource.data.uid);
      allow create: if isLoggedIn();
      allow delete: if isLoggedIn() && isOwner(resource.data.uid);
    }

    // Live locaties — alleen vrienden
    match /liveLocations/{uid} {
      allow read: if isLoggedIn() && isFriendOrSelf(uid);
      allow write: if isOwner(uid);
    }

    // Badge voortgang
    match /userProgress/{uid} {
      allow read, write: if isOwner(uid);
    }

    // Push notificatie wachtrij
    match /pushQueue/{docId} {
      allow create: if isLoggedIn();
      allow read, update: if false;
    }
  }
}
